<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="#99FFFFFF"
tools:context=".Planillas.ActividadesAsesoriaActivity"
tools:showIn="@layout/activity_actividades_asesoria">


<android.support.design.widget.FloatingActionButton
    android:id="@+id/fab2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onActionVolver"
    app:backgroundTint="@color/common_google_signin_btn_text_dark_focused"
    app:fabCustomSize="40dp"
    app:fabSize="normal"
    app:srcCompat="@drawable/baseline_keyboard_arrow_left_white_18" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitStart"
        android:src="@drawable/sports" />

<TextView
    android:id="@+id/textView6"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Assessoria online"
    android:layout_centerInParent="true"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="30sp"
    android:background="#99FFFFFF"
    android:textStyle="bold|italic"
    android:typeface="normal" />

<TextView
    android:id="@+id/textView7"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Acompanhamento a distância, periodização pautada no objetivo (performance, estética ou saúde) com flexibilidade de local de treino - indoor ou ao ar livre. Ideal para quem está longe de nós, mas ainda assim quer fazer parte do nosso time."
    android:textColor="@color/colorPrimaryDark"
    android:background="#99FFFFFF"
    android:layout_centerInParent="true"
    android:layout_below="@id/textView6"
    android:textAlignment="center"
    android:textSize="20sp"
    android:textStyle="bold|italic"
    android:typeface="normal" />

</RelativeLayout>