<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planillas.ConfeccionarPlanilla.ConfeccionarPlanillaActivity4">


    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nova Planilha"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginStart="55dp"
        android:textStyle="bold|italic"
        android:typeface="normal" />



    <TextView
        android:id="@+id/tv_braco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/lb_brazo"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/tv_titulo"/>

    <EditText
        android:id="@+id/et_braco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:autofillHints=""
        android:hint="@string/cual_problema"
        android:inputType="number"
        android:imeActionId="6"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_titulo" />

    <TextView
        android:id="@+id/tv_cintura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/lb_cintura"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/tv_braco"/>

    <EditText
        android:id="@+id/et_cintura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:autofillHints=""
        android:hint="@string/cual_problema"
        android:inputType="number"
        android:imeActionId="6"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_braco" />

    <TextView
        android:id="@+id/tv_abdominal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/lb_abdominal"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/tv_cintura"/>

    <EditText
        android:id="@+id/et_abdominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:autofillHints=""
        android:hint="@string/cual_problema"
        android:inputType="number"
        android:imeActionId="6"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_cintura" />

    <TextView
        android:id="@+id/tv_quadril"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/lb_quadril"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/tv_abdominal"/>

    <EditText
        android:id="@+id/et_quadril"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:autofillHints=""
        android:hint="@string/cual_problema"
        android:inputType="number"
        android:imeActionId="6"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_abdominal" />

    <TextView
        android:id="@+id/tv_coxa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/lb_coxa"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/tv_quadril"/>

    <EditText
        android:id="@+id/et_coxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:autofillHints=""
        android:hint="@string/cual_problema"
        android:inputType="number"
        android:imeActionId="6"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_quadril" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:onClick="onActionVolver"
            android:text="@string/btn_voltar"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_registrar1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:onClick="onActionRegistrar"
            android:text="@string/btn_proximo"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>