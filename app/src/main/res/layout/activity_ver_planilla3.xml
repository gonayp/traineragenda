<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planillas.VerPlanilla.ConfeccionarPlanilla.VerPlanillaActivity3">


    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Minha Planilha"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginStart="55dp"
        android:textStyle="bold|italic"
        android:typeface="normal" />





    <TextView
        android:id="@+id/tv_o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/lb_peso"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/tv_titulo"/>


    <TextView
        android:id="@+id/et_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:autofillHints=""
        android:imeActionId="6"
        android:imeActionLabel="@string/action_sign_in_short"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_titulo" />

    <TextView
    android:id="@+id/tv_m"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="15dp"
    android:text="@string/altura"
    android:textAlignment="center"
    android:textSize="20sp"
    android:layout_below="@id/tv_o"/>

    <TextView
        android:id="@+id/et_altura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:imeActionId="6"
        android:imeActionLabel="@string/action_sign_in_short"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_o" />

    <TextView
        android:id="@+id/tv_i"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/lb_imc"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/tv_m"/>

    <TextView
        android:id="@+id/et_imc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:autofillHints=""
        android:imeActionId="6"
        android:imeActionLabel="@string/action_sign_in_short"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_m" />

    <TextView
        android:id="@+id/spinner_imc"
        android:layout_below="@id/tv_i"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_coo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/lb_cooper"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/spinner_imc"/>


    <TextView
        android:id="@+id/et_cooper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:autofillHints=""
        android:imeActionId="6"
        android:imeActionLabel="@string/action_sign_in_short"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/spinner_imc" />

    <TextView
        android:id="@+id/tv_fc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/lb_fcmax"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_below="@id/tv_coo"/>

    <TextView
        android:id="@+id/et_fc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:autofillHints=""
        android:imeActionId="6"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_below="@id/tv_coo" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:onClick="onActionVolver"
            android:text="@string/btn_voltar"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_registrar1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:onClick="onActionRegistrar"
            android:text="@string/btn_proximo"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>